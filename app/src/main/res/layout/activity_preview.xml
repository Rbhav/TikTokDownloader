<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.downloaderfor.tiktok.view.preview.PreviewActivity" android:background="@color/black">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@color/white"
            android:id="@+id/image_preview_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/button_share"
            android:background="@drawable/ic_share"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/button_delete"
            android:background="@drawable/ic_delete_white"
            app:layout_constraintEnd_toStartOf="@+id/button_share"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="@+id/image_preview_activity"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/ic_play" android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/image_preview_activity"
            app:layout_constraintTop_toTopOf="@+id/image_preview_activity"/>
</androidx.constraintlayout.widget.ConstraintLayout>
