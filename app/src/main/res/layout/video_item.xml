<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:padding="6dp">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@color/colorAccent" android:id="@+id/image_preview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button_start_video"
            app:layout_constraintEnd_toEndOf="@+id/image_preview"
            app:layout_constraintStart_toStartOf="@+id/image_preview"
            app:layout_constraintTop_toTopOf="@+id/image_preview"
            app:layout_constraintBottom_toBottomOf="@+id/image_preview"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" android:background="@drawable/ic_play"/>
</androidx.constraintlayout.widget.ConstraintLayout>